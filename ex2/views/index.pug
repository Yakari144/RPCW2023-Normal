extends layout

block content
  .w3-card-4
    header.w3-container.w3-teal
      h1 Contracts
    .w3-container
      table.w3-table-all
        tr
          th _id
          th DataInicioContrato
          th DataFimContrato
          th NomeInstituicao 
          th AreasInvestigacao
        each s in o
          tr
            td #[a(href="/" + s._id)= s._id ]
            td= s.DataInicioContrato
            td= s.DataFimContrato
            td #[a(href="/inst/" + s.NomeInstituicao)= s.NomeInstituicao ]
            td= s.AreasInvestigacao
    footer.w3-container.w3-teal
      h5 Generated by RPCW2023-Normal in #{d}